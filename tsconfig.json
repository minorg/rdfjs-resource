{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": false,
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.js",
    "**/*.js.map"
  ],
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "include": ["src/*.ts"]
}
